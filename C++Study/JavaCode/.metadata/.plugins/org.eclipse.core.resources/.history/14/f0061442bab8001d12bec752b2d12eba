package chapter07object;

public class peach {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int day = 1;
		
//		Tool tool = new Tool();
//		int num = tool.pp(day);
//		System.out.println(num);
		public static int pp(int day) {
			if(day == 10) {
				return 1;
			}else if(day>=1 && day<=9) {
				return ((pp(day+1) + 1) * 2);
			}else {
				return -1;
			}
		}
		
	}
	
	

}
class Tool {
	public int pp(int day) {
		if(day == 10) {
			return 1;
		}else if(day>=1 && day<=9) {
			return ((pp(day+1) + 1) * 2);
		}else {
			return -1;
		}
	}
}
